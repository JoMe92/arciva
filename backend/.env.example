APP_ENV=dev
# Required secrets
SECRET_KEY=changeme

# Frontend origins (Vite dev server by default)
ALLOWED_ORIGINS__0=http://localhost:5173
ALLOWED_ORIGINS__1=http://127.0.0.1:5173
# Automatically add LAN origins like http://192.168.x.x:5173 when APP_ENV=dev
ALLOW_LAN_FRONTEND_ORIGINS=true
DEV_FRONTEND_PORT=5173

# Storage & database (absolute paths)
APP_DB_PATH=${HOME}/arciva-data/db/app.db
APP_MEDIA_ROOT=${HOME}/arciva-data/media
# Optional: uncomment to use Postgres instead of SQLite
# DATABASE_URL=postgresql+asyncpg://arciva:arciva@localhost:5432/arciva

# Services
REDIS_URL=redis://127.0.0.1:6379/0

# Media processing
THUMB_SIZES=[256]
MAX_UPLOAD_MB=1000
WORKER_CONCURRENCY=2

# Logging (overrides default ./logs)
LOGS_DIR=.dev/logs

# Optional: set a custom exiftool binary
# EXIFTOOL_PATH=/usr/bin/exiftool
