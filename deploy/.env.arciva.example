# Core runtime
APP_ENV=prod
SECRET_KEY=change-me                # replace with openssl/pwgen output
APP_PORT=8000                       # host port for API + bundled SPA

# Database (PostgreSQL for compose; SQLite path kept for optional fallback)
DATABASE_URL=postgresql+asyncpg://arciva:arciva@postgres:5432/arciva
APP_DB_PATH=/data/db/app.db

# Storage
APP_MEDIA_ROOT=/data/media          # persisted volume
LOGS_DIR=/data/logs                 # persisted volume
THUMB_SIZES=[256]
MAX_UPLOAD_MB=1000
WORKER_CONCURRENCY=2
EXPORT_RETENTION_HOURS=24

# Services
REDIS_URL=redis://redis:6379/0
ALLOWED_ORIGINS__0=http://localhost:8000

# Postgres container credentials (match docker-compose.arciva.yml)
POSTGRES_USER=arciva
POSTGRES_PASSWORD=arciva
POSTGRES_DB=arciva

# Image to run (override to use a locally built image)
ARCIVA_IMAGE=ghcr.io/jome92/arciva:latest
